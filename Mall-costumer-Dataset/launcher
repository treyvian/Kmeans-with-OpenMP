#!/bin/bash

# Compiling with make file
make

read -p 'execute with Valgrind ? [y/N]:' choice

if [[ "$choice" == 'y' ]]; then
    # Executing code
    valgrind --leak-check=full --show-leak-kinds=all ./output 201 5 Mall_Customers.csv 5 -s
else
    ./output 201 5 Mall_Customers.csv 5
fi

make clean

read -p 'visualize the results ? [y/N]:' ans

if [[ $ans == "y" ]]; then
    # Visualizing results
    python visualizer.py
fi